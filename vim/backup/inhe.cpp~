#include <iostream>
using namespace std;

class Parent {
	private: 
		int pria;

	public:
		Parent()
		{
			cout << "Parent: Khong doi so" << endl;
		}

		Parent(int a)
		{
			cout << "Parent: Mot doi so" << endl;
		}

		void printPria()
		{
			cout << pria << endl;
		};

		void setPria(int a)
		{
			pria = a;
		}

};


class Children:public Parent {
	public:
		Children()
		{
			cout << "Children: Khong doi so" << endl;
		}

		Children(int a):Parent(a)
		{
			cout << "Children Mot doi so" << endl;
		}
};//Children

int main ()
{
	Parent mParent;
	//Goi cac public method
	mParent.setPria(5);
	mParent.printPria();

	Children mChildren(7);
	//Goi cac public method
	mChildren.setPria(7);
	mChildren.printPria();
	return 1;
}
