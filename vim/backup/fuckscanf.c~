#include <stdio.h>

int main()
{

	int x;
	int a, b;
	char c1, c2;

	//scanf("%d ",&x);//notice the extra space after %d
	scanf("%d",&x);//notice the extra space after %d
	printf("first %d",x);


	printf("Enter something: ");
	scanf("%d",&a); // line 1
	printf("Enter other something: ");
	scanf("%d", &b); // line 2

	printf("Enter a char: "); 
	scanf("\n%c",&c1); // line 3
	printf("Enter other char: ");
	scanf("\n%c", &c2); // line 4

	return 0;
}
