#!/usr/bin/env python

import sys

fin = open('word.in', 'r')
lines = fin.readlines()

class Word():
	def __init__(self, word, line):
		self.word = word
		self.lines = [line]
		self.cntr = 1
	def __str__(self):
		return str(self.cntr) + " " + self.word + " " + str(self.lines)
	def __contain__(self, key):
		return key == self.word

allwords = []
for line in lines:
	line_number =  lines.index(line) + 1
	for w in line.split():
		if w not in allwords:
			allwords.append(Word(w, line_number))

for w in allwords:
	print w
#counter, counter for each line
