import java.util.*;

public class EnumLearn
{
	enum Size{
		Small(3),
		Medium(4),
		Large(9);

		private int pricing;

		Size(int p)
		{
			pricing = p;
		}

		public int getPricing() {
			return pricing;
		}
	}


	enum Phone{
		IPhone,
		Android,
		Bada
	}

	public static void main (String [] args)
	{
		for(Size s: Size.values())
			System.out.println("Size: " + s + " price: " + s.getPricing());
		for(Phone p : Phone.values())
			System.out.println("Phone: " + p);

		System.out.println("Enum map");
		Map<Phone, Integer> map = new EnumMap<Phone, Integer>(Phone.class);
		map.put(Phone.Iphone, 8);
		map.put(Phone.Android, 9);
		map.put(Phone.Bada, 6);

		for(Map.Entry<Phone, Integer> entry : map.entrySet())
		{
			System.out.println("Map entry" + entry);
		}
	}//
}
