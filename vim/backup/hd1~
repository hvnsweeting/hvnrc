<script typs="text/javascript">
    
    $(document).ready(function(){
        flowplayer("mediaplayer", "http://tv.hdviet.com/player/player-3.2.16.swf", {
            onPause: function() {
                $f().getPlugin("menu").fadeOut();
            },
            onResume: function() {
                $f().getPlugin("menu").fadeOut();
            },

            plugins: {
                controls: {
                    onHidden: function() {
                        $f().getPlugin("menu").fadeOut();
                    }
                },
                menu: {
                    items: [{"label":"480p","imageUrl":"","index":0,"toggle":true,"group":"menu","selected":true}],
                    onSelect: function(item) {
                        if (item.index >= 0) {
                            $f().play(item.index);
                        }
                    }
                }
            },
            playlist: ["livetv\/_definst_\/dishd_800.stream\/manifest.f4m?DVR"],
            clip: {
                scaling: 'fit',
                baseUrl: 'http://tv01.vn-hd.com:8080/'
            },
            wmode: 'opaque'
        });
        
    });
    
    
</script>
