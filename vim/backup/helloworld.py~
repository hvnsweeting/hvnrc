			# Return an error message...
			pass
		
		message = mail.EmailMessage()
		message.sender = 'bot.c2k8pro@gmail.com'
		message.to = to_addr
		message.body = """
		Just test
		""" 
		message.send()
		self.response.out.write("\nSent!")


app = webapp2.WSGIApplication([('/', MainPage),
	('/sign', Guestbook), ('/mail', SendMailTest)],
	debug = True)

