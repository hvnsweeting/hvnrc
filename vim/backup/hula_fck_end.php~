<?php
$result = tep_db_query($sql);
$textarea = '';
while(($row = tep_db_fetch_array($result)) != null)
	$textarea.= $row['content'];

//Create fckeditor
$oFCKeditor = new FCKeditor('FCKeditor1') ;
$oFCKeditor->BasePath = '../ext/fckeditor/' ;
$oFCKeditor->Value = $textarea ;
$oFCKeditor->Create() ;
?>
