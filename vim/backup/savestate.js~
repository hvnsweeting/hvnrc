function setCookie(name, value, exdays)
{
	var exdate=new Date();
	exdate.setDate(exdate.getDate() + exdays);
	var checked=escape(value) + ((exdays==null) ? "" : "; expires="+exdate.toUTCString());
	document.cookie=name+"="+checked;
}//setCookie

function getCookie(c_name)
{
	var i,x,y,ARRcookies=document.cookie.split(";");
	for (i=0;i<ARRcookies.length;i++)
	{
		x=ARRcookies[i].substr(0,ARRcookies[i].indexOf("="));
		y=ARRcookies[i].substr(ARRcookies[i].indexOf("=")+1);
		x=x.replace(/^\s+|\s+$/g,"");
		if (x==c_name)
		{
			return unescape(y);
		}
	}
}//getCookie

/**
 * Check box 
 **/

function setCheckboxStateFromCookies(cname, id)
{
	var state=getCookie(cname);
	if(state!=null && state!="" && state=="yes")
	{
		var e = document.getElementById(id);
		e.checked=true;
	}
	return false;
}//setCheckboxStateFromCookies

function putCheckboxStateToCookies(cname, id)
{
	var e = document.getElementById(id);
	if(e.checked==true)
		setCookie(cname,"yes",365);
	else
		setCookie(cname,"no",365);
}//putCheckboxStateToCookies

/**
 * Select 
 **/
function setSelectOptionChoosedValue(id, val)
{
	var e = document.getElementById(id);
	e.value=val;
	//alert('setted');
}//setSelectOptionChoosedValue

function getSelectOptionChoosedText(id)
{
	var e = document.getElementById(id);
	var str = e.options[e.selectedIndex].text;
	//alert('selected ' + str);
	return str;
}//getSelectOptionChoosedText

function getSelectOptionChoosedValue(id)
{
	var e = document.getElementById(id);
	var str = e.options[e.selectedIndex].value;
	//	alert('selected ' + str);
	return str;
}//getSelectOptionChoosedText

//Put select option choosed TEXT to cookies
function putSOToCookies(cname, id)
{
	str = getSelectOptionChoosedValue(id);
	setCookie(cname,str,365);
	//alert("putted to cookies" + str);
}//putCheckboxStateToCookies

function setSOFromCookies(cname, id)
{
	var val=getCookie(cname);
	if(val!=null && val!="")
	{
		setSelectOptionChoosedValue(id, val)
	}
}
