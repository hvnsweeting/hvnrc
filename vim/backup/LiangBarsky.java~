class LiangBarsky
{
	public static void main (String [] args)
	{
		/* code */
	}

	boolean clipTest(int p, int q, float t1, float t2)
	{
		float r;
		if(p < 0)
		{
			r = ((float)q)/p;
			if(r > t2)
				return false;
			else
				if(r > t1)
					t1 = r;
		}//p < 0
		else
		{
			if(p > 0)
			{
				r = ((float)q)/p;
				if(r < t1)
					return false;
				else
					if(r < t2)
						t2 = r;
			}// p > 0
			else // p = 0
				if(q < 0)
					return false;
		}//else
		return true;
	}//clipTest

	boolean liangBarskyClipping(Point p1, Point p2, Rect R, Point q1, Point q2)
	{
		float t1, t2;
		int Dx, Dy, x1, y1, x2, y2, xmin, ymin, xmax, ymax;
		t1 = 0;
		t2 = 1;
		x1 = p1.x;
		y1 = p1.y;
		x2 = p2.x;
		y2 = p2.y;
		Dx =x2 - x1;
		Dy = y2 - y1;
		xmin = R.left;
		ymin = R.top;
		xmax = R.right;
		ymax = R.bottom;
		if(clipTest(-Dx,x1-xmin, t1, t2))//hbpt 1
			if(clipTest(Dx, xmax - x1, t1, t2)) //btp2
				if(clipTest(-Dy, y1 - ymin, t1, t2))//bpt 3
					if(clipTest(Dy, ymax - y1, t1, t2))
					{
						q1.x = x1 + t1 * Dx;
						q1.y = y1 + t1 * Dy;
						q2.x = x1 + t2 * Dx;
						q2.y = y1 + t2 * Dy;
						return true;
					}//4
		return false;
	}//liangBarskyClipping
}//LiangBarsky

class Point{
	int x;
	int y;
	public Point() {
		x = 0;
		y = 0;
	}

	public Point(int x, int y)
	{
		this.x = x;
		this.y = y;
	}
}//Point class


class Rect {
	int top;
	int bottom;
	int left;
	int right;

	public Rect(){ 
		this.top = 0;
		this.bottom = 0;
		this.left = 0;
		this.right = 0;
	}
	public Rect(int top, int bot, int left, int right)
	{
		this.top = top;
		this.bottom = bot;
		this.left = left;
		this.right = right;
	}

}//Rect class
