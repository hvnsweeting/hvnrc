# common developer tools
# find the most common used Python vars
function pyvars () {
    find $1 -name '*.py' | xargs grep ' = ' | cut -f1 -d'=' | tr -d ' ' | cut -f2 -d':' | sort -nr | uniq -c| sort -nr| head -n30
}

