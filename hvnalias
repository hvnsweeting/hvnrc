gfa () {
    current=`pwd`
    if [ -z $1 ]; then
        dest=/home/hvn/Github/bfs/*/
    else
        dest=$1
    fi
    for n in `find $dest -name '.git' -type d `;
    do
        dir=$(echo $n | grep -Eo '.*/')
        cd $dir
        echo "fetching in $(pwd)"
        git fetch origin -p
    done
    cd $current
}

function gpush () {
    files=$(git log -n3 --stat | grep -o '.*\.py')
        for f in $files; do
            if [ -e $f ]; then
                flake8 $f
            fi
        done
    if [ ! -z "$files" ]; then
        echo 'Do you still want to push? [y/n]'
        read answer
        if [ "$answer" = 'y' ]; then
            git push $*
        fi
    fi
}

