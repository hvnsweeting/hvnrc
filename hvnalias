# auto wrap chicken scheme interpreter
csi() {
    if command -v rlwrap ; then
        rlwrap csi
    else
        csi
    fi
}

# auto wrap dict output to a pager
dict() {
    env dict $1 | less
}

# ssh hostname instead of IP
sshh() {
    hostip=$(echo "$1" | grep -o '\d.*' | sed 's/-/./g')
    echo "SSH to ${hostip} ..."
    shift
    ssh "$hostip" $@
}

